{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "start": "turbo start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "start:storefront": "turbo run start --filter=storefront",
    "start:medusa": "turbo run start --filter=medusa",
    "generate-env": "cp ./apps/medusa/.env.template ./apps/medusa/.env && cp ./apps/storefront/.env.template ./apps/storefront/.env",
    "medusa:init": "turbo run medusa:init --filter=medusa",
    "format": "turbo run format",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' \\;",
    "typecheck": "turbo run typecheck",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20"
  },
  "resolutions": {
    "@mikro-orm/*": "6.4.16"
  },
  "packageManager": "yarn@4.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
